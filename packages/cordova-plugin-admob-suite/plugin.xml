<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-admob-suite" version="0.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>cordova-plugin-admob-suite</name>
    <js-module name="AdMob" src="www/admob.js">
        <clobbers target="admob" />
    </js-module>

    <preference name="ADMOB_APPLICATOIN_ID" />

    <platform name="android">
        <config-file target="res/xml/config.xml" parent="/*">
            <feature name="AdMob">
                <param name="android-package" value="admob.suite.AdMobPlugin"/>
            </feature>
        </config-file>

        <preference name="PLAY_SERVICES_VERSION" default="+" />

        <framework src="com.google.android.gms:play-services-ads:$PLAY_SERVICES_VERSION" />

        <source-file src="src/android/Actions.java" target-dir="src/admob/suite" />
        <source-file src="src/android/AdMob.java" target-dir="src/admob/suite" />
        <source-file src="src/android/AbstractExecutor.java" target-dir="src/admob/suite" />

        <source-file src="src/android/interstitial/InterstitialExecutor.java" target-dir="src/admob/suite/interstitial" />
    </platform>

    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="AdMob">
                <param name="ios-package" value="AMSPlugin" />
            </feature>
        </config-file>

        <header-file src="src/ios/AMSPlugin-Bridging-Header.h" />
        <source-file src="src/ios/AMSInterstitial.swift" />
        <source-file src="src/ios/AMSPlugin.swift" />

        <dependency id="cordova-plugin-add-swift-support" version="^1.7.2" />
        <dependency id="cordova-plugin-cocoapod-support" version="^1.5.0" />

        <pods-config use-frameworks="true" />
        <pod name="Google-Mobile-Ads-SDK" version="~> 7.31" />
    </platform>
</plugin>

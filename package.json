{
  "name": "admob-suite-monorepo",
  "private": true,
  "scripts": {
    "test": "jest",
    "lint": "tslint --project packages/cordova-plugin-admob-suite",
    "test-android": "run-s test-android:*",
    "test-android:testbed": "cordova-testbed --platform android --plugin packages/cordova-plugin-admob-suite --build-only",
    "test-android:example": "cd examples/basic && cordova build android",
    "test-ios": "run-s test-ios:*",
    "test-ios:testbed": "cordova-testbed --platform ios --plugin packages/cordova-plugin-admob-suite --build-only",
    "test-ios:example": "cd examples/basic && cordova build ios",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/config-lerna-scopes": "^7.0.0",
    "@commitlint/prompt-cli": "^7.0.0",
    "@types/jest": "^23.1.6",
    "cordova": "^8.0.0",
    "cordova-testbed": "^0.1.0",
    "eslint": "^5.1.0",
    "eslint-config-concise": "^0.28.0",
    "eslint-config-concise-browser": "^0.28.0",
    "eslint-config-concise-esnext": "^0.28.2",
    "husky": "^0.14.3",
    "jest": "^23.4.1",
    "lerna": "3.0.0-beta.21",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7",
    "prettier-eslint-cli": "^5.0.0-beta.0",
    "prettier-tslint": "^0.4.0",
    "remark-cli": "^5.0.0",
    "remark-lint-are-links-valid-duplicate": "^0.2.2",
    "remark-lint-heading-whitespace": "^1.0.0",
    "remark-lint-no-empty-sections": "^2.0.0",
    "remark-lint-no-trailing-spaces": "^2.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "ts-jest": "^23.0.0",
    "tslint": "^5.10.0",
    "tslint-config-concise": "^0.22.1",
    "typescript": "^2.9.2"
  },
  "repository": "admob-suite/admob-suite",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "concise"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "remark --no-stdout"
    ],
    "*.ts": [
      "prettier-tslint fix",
      "git add"
    ],
    "examples/*/package.json": [
      "prettier --write",
      "git add"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-consistent",
      "remark-preset-lint-markdown-style-guide",
      "remark-lint-are-links-valid-duplicate",
      "remark-lint-heading-whitespace",
      "remark-lint-no-empty-sections"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "examples/*",
      "website"
    ],
    "nohoist": [
      "ionic-angular-example/**"
    ]
  }
}

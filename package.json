{
  "name": "admob-suite-monorepo",
  "private": true,
  "scripts": {
    "test": "jest",
    "test-android": "cordova-testbed --platform android --plugin packages/cordova-plugin-admob-suite",
    "test-ios": "cordova-testbed --platform ios --plugin packages/cordova-plugin-admob-suite",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "@commitlint/config-lerna-scopes": "^7.0.0",
    "@commitlint/prompt-cli": "^7.0.0",
    "@types/jest": "^23.1.1",
    "cordova": "^8.0.0",
    "cordova-testbed": "^0.0.2",
    "eslint": "^4.19.1",
    "eslint-config-concise": "^0.26.1",
    "eslint-config-concise-browser": "^0.26.0",
    "husky": "^0.14.3",
    "jest": "^23.1.0",
    "lerna": "^3.0.0-beta.21",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "remark-cli": "^5.0.0",
    "remark-lint-are-links-valid-duplicate": "^0.2.2",
    "remark-lint-heading-whitespace": "^1.0.0",
    "remark-lint-no-empty-sections": "^2.0.0",
    "remark-lint-no-trailing-spaces": "^2.0.0",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-preset-lint-recommended": "^3.0.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.10.0",
    "tslint-config-concise": "^0.22.1",
    "typescript": "^2.9.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "concise"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "remark --no-stdout"
    ],
    "*.ts": [
      "tslint --fix",
      "git add"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-consistent",
      "remark-preset-lint-markdown-style-guide",
      "remark-lint-are-links-valid-duplicate",
      "remark-lint-heading-whitespace",
      "remark-lint-no-empty-sections"
    ]
  },
  "workspaces": [
    "packages/*",
    "example/*"
  ]
}
